.newfriend{
    width: 700rpx;
    padding: 28rpx 28rpx 0 28rpx ;
    background-color: rgb(255, 255, 255);
    overflow: hidden;
}
.newfriend image{
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
    background-color: #f2a0a1;
}
.newfriend>view:nth-child(1){
    float: left;
    width: 88rpx;
    height: 88rpx;
    /* background-color: rgb(207, 44, 44); */
    margin-right: 28rpx;
}
.newfriend>view:nth-child(2){
    width: 585rpx;
    float: left;
    height: 80rpx;
    border-bottom: #E5E5E5 1rpx solid ;
    padding-bottom: 28rpx;
    position: relative;
}
.newfriend>view:nth-child(2)>view:nth-child(1){
    letter-spacing:2rpx;
    margin-top: 20rpx;
}
