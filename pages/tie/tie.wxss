.album {
    margin: 228rpx auto 0;
    background-color: rgb(238, 216, 216);
    width: 650rpx;
    height: 650rpx;
    border-radius: 40rpx;
    border: solid 4rpx skyblue;
}

.album>image {
    width: 650rpx;
    height: 650rpx;
    border-radius: 40rpx;
}

.album>video {
    width: 650rpx;
    height: 650rpx;
    border-radius: 40rpx;
}

.domain {
    position: relative;
    margin-top: 200rpx;
}

.domain>view:nth-child(1) {
    width: 100rpx;
    height: 50rpx;
    background-color: rgb(215, 221, 224);
    border-radius: 80rpx;
    position: absolute;
    left: 120rpx;
    top: 36rpx;
}

.dianjiout1 {
    background-color: rgb(168, 188, 197) !important;
    box-shadow: 0px 0px 10rpx #e98888;
}

.domain>view:nth-child(2) {
    width: 240rpx;
    height: 120rpx;
    background-color: #d4237a;
    margin: 0 auto;
    border-radius: 80rpx;
}

.dianjiout2 {
    background-color: #f8077c !important;
    box-shadow: 0px 0px 10rpx #e98888;
}

.domain>view:nth-child(3) {
    width: 100rpx;
    height: 50rpx;
    background-color: rgb(114, 128, 247);
    border-radius: 80rpx;
    position: absolute;
    right: 120rpx;
    top: 36rpx;
}

.dianjiout3 {
    background-color: rgb(92, 104, 221) !important;
    box-shadow: 0px 0px 10rpx #e98888;
}

.domain>view:nth-child(1)>image {
    width: 40rpx;
    height: 40rpx;
    margin-left: 30rpx;
    margin-top: 6rpx;
}

.domain>view:nth-child(2)>image {
    width: 80rpx;
    height: 80rpx;
    margin-left: 76rpx;
    margin-top: 16rpx;
}

.domain>view:nth-child(3)>image {
    width: 40rpx;
    height: 40rpx;
    margin-left: 30rpx;
    margin-top: 6rpx;
}

.domain button {
    background-color: rgba(255, 255, 255, 0);
    position: absolute;
    display: block;
    box-sizing: border-box;
    width: 100rpx;
    height: 81rpx;
    left: 277rpx;
    top: 20rpx;
}
